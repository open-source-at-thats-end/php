<div class="card mb-3 bg-white text-left te-card border-0" id="Exterior-hash">
	<div class="card-header te-card-header te-bg-light pl-0 border-0 rounded-0 py-3">
		<div class="col-xl-12 col-lg-12 col-md-12">
			<h5 class="title-font text-left te-line-height-normal mb-0 pb-0 px-2 txt-heading heading_txt_color">Update Password</h5>
		</div>
	</div>
	<div class="card-body p-0 collapse show" id="exterior">
		<span id="cp-message-container"></span>
		<form class="p-4" for="form" id="frmPassword">
			<div class="group position-relative">
				<input class="form-input w-100 bg-transparent required" type="password" placeholder="" name="current_password" id="current_password">
				<span class="bar"></span>
				<label class="form-label position-absolute">Current Password</label>
			</div>
			<div class="group position-relative">
				<input class="form-input w-100 bg-transparent required" type="password" placeholder="" name="new_password" id="new_password">
				<span class="bar"></span>
				<label class="form-label position-absolute">New Password</label>
			</div>
			<div class="group position-relative">
				<input class="form-input w-100 bg-transparent required" type="password" placeholder="" name="confirm_password" id="confirm_password">
				<span class="bar"></span>
				<label class="form-label position-absolute">Confirm Password</label>
			</div>
			<div class="cp-loading-area"></div>
			<button class="btn border-secondary- te-btn text-white- shadow-none rounded-0 px-4 mt-3 btn-change-password lpt-btn lpt-btn-txt" type="submit" role="button">Change Password</button>
		</form>
	</div>
</div>